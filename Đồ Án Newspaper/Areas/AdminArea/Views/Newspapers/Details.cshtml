@model Đồ_Án_Newspaper.Models.Newspaper

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminMasterLayout.cshtml";
}

<h2> Chi Tiết Bài Báo </h2>

<div class="card">
    <div class="card-header">
        <h4 class="bg-success text-light p-3"> Tiêu Đề </h4>
        @Html.DisplayFor(model => model.TieuDe, new { @class = "" })
    </div>

    <div class="card-header">
        <h4> Tiêu Đề Phụ </h4>
        @Html.DisplayFor(model => model.TieuDePhu, new { @class = "w-100  form-control" })
    </div>

    <div class="card-body">
        <h4 class="bg-info p-3 text-light"> Nội Dung </h4>
        @Html.DisplayFor(model => model.NoiDung, new { @class = "" })
    </div>

    <div class="card-footer">
        <h4 class="bg-warning text-dark p-3"> Danh Mục </h4>
        @Html.DisplayFor(Model => Model.ChuyenMuc.LoaiChuyenMuc)
    </div>

    <div class="card-footer">
        <h4 class="p-3 bg-primary text-light"> Người Đăng - Người Quản Lý </h4>
        @Html.DisplayFor(Model => Model.Admin.Admin_usernane)
    </div>
</div>
<p class="mt-3 mb-3">
    @Html.ActionLink("Edit", "Edit", "Newspapers", new { id = Model.Id_bao } , new {@class = "btn btn-primary"}) |
    @Html.ActionLink("Back to List", "Index" , " " , new { @class = "btn btn-success" })
</p>
