@model Đồ_Án_Newspaper.Models.Admin

@{
    Console.InputEncoding = System.Text.UTF8Encoding.UTF8;
    Console.OutputEncoding = System.Text.UTF8Encoding.UTF8;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <style>
        .container {
            min-height: 100vh;
        }

        .SignUp-Page {
            padding: 40px;
            box-shadow: 0px 0px 10px black;
        }

        .input {
            width: 300px;
        }
    </style>
    <div class="container d-flex flex-column justify-content-center align-items-center">
        <div class="SignUp-Page">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="text-center bg-primary text-light p-3"> Sign Up </h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Admin_usernane, htmlAttributes: new { @class = "control-label col-md-2 mt-2 mb-1" })
                    <p class="small"> (Tên này sẽ dùng cho tên quản lý , Đăng Bài )</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Admin_usernane, new { htmlAttributes = new { @class = "form-control mb-3 input username" } })
                        @Html.ValidationMessageFor(model => model.Admin_usernane, "", new { @class = "text-danger" })
                        <label class="text-danger"> @ViewBag.Notification </label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Admin_password, htmlAttributes: new { @class = "control-label col-md-2 mt-2 mb-1" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Admin_password, new { htmlAttributes = new { @class = "form-control input" } })
                        @Html.ValidationMessageFor(model => model.Admin_password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Admin_repassword, htmlAttributes: new { @class = "control-label col-md-2 mt-2 mb-1" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Admin_repassword, new { htmlAttributes = new { @class = "form-control input" } })
                        @Html.ValidationMessageFor(model => model.Admin_repassword, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group row row-cols-2">
                    <div class="col-md-offset-2 col-md-10 col-6 d-flex justify-content-between">
                        <input type="submit" value="Create" class="btn btn-primary mt-3" />
                    </div>

                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Go back To LogIn Page", "Login", "Admins", new { @class = "btn btn-success mt-3" })
            </div>
        </div>
    </div>
</body>
</html>

<script>
    
</script>
