    Layout = "~/Areas/AdminArea/Views/Shared/_AdminMasterLayout.cshtml";
}

<h2> Chỉnh Sửa Danh Mục </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
